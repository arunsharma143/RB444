@model RB444.Data.Entities.News
@{
    ViewData["Title"] = "CreateNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create News</h2>

<form id="request-form" autocomplete="off" class="" method="post">

    <div class="form-horizontal">
        <hr />
        <div class="errorTxt">@TempData["ErrorMsg"]</div>
        <div class="form-group">
            <label class="control-label col-md-2" asp-for="NewsText" style="color:black !important;">News Text</label>
            <div class="col-md-10">
                <input type="text" class="form-control col-md-10" asp-for="NewsText">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary font-weight-bold" />
            </div>
        </div>
    </div>
</form>

    <div>
        @Html.ActionLink("Back to List", "News")
    </div>


